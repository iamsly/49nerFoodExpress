<h1 align="center">All 49ner Food Express Users</h1>
<div align="center">
    <% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="order-item">
                    <%= link_to user.username, user_path(user) %>
                </li>
                 <li><small><%= pluralize(user.orders.count, "order") if user.orders %></small></li>
                 <% if logged_in? and current_user.admin? %>
                     <li><%= link_to "Delete this user", user_path(user), method: :delete,
                         data: { confirm: "Are you sure you want to delete the user and all their orders?" } %></li>
                 <% end %>
            </div>
        </div>  
    </ul>
<% end %>
</div>

        