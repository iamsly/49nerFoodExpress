<h2 align="center">Item: <%= @order.item %></h2>

<div class="well col-xs-8 col-xs-offset-2">
 <% if @order.user %>
 <ul class="listing">
        <div class="row center">
            <div class="col-md-4 col-md-offset-4">
                <li>Created by:</li>
                <li><%= link_to gravatar_for(@order.user), user_path(@order.user) %></li>
                <li class="order-item">
                    <%= link_to @order.user.username, user_path(@order.user) %>
                </li>
                 <li><small>
                  <%= pluralize(@order.user.orders.count, "order") if @order.user.orders %>
                 </small></li>
            </div>
        </div>  
    </ul>
 <% end %>
 
 <h4 class="center room"><strong>Room:</strong></h4>
 <hr>
 <%= simple_format(@order.room) %>
 
 <h4 class="center description"><strong>Description:</strong></h4>
 <hr>
 <%= simple_format(@order.description) %>
 
 <div class="order-actions">
   <% if logged_in? && current_user == @article.user %>
  <%= link_to "Edit this order", edit_order_path(@order), class: "btn btn-xs btn-primary" %>
  <%= link_to "Delete this order", order_path(@order), method: :delete,
                                    data: { confirm: "Are you sure you want to delete the order?"},
                                    class: "btn btn-xs btn-danger" %>
  <%= link_to "Back to order history", orders_path, class: "btn btn-xs btn-success" %>
 </div>
</div> 

